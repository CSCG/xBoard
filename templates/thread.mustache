{{>head}}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="pull-right"><a href="/" class="title">{{siteName}}</a></h2>
			</div>
		</div>
		<hr>
		{{#thread}}
		<div class="row">
			<div class="col-lg-12">
				<h2>{{title}}</h2>
				<!--<p>Last Updated: <span class="unixtime" data-timestamp="{{updated}}"></span> | Posts: {{count}} | User: {{name}}</p>-->
			</div>
		</div>
		<hr>
		{{#posts}}
			<div class="row">
				<div class="col-lg-12">
					<p>{{post}}</p>
					<p><small class="muted">User: {{name}} ({{secret}}) | Posted: <span class="unixtime" data-timestamp="{{time}}"></span></small></p>
				</div>
			</div>
			<hr>
		{{/posts}}
		<div id="createbox" class="outerbox container row"><div class="innerbox">
			<h2>Post Reply</h2>
			<form class="form-horizontal" id="threadform" action="/post/{{id}}" method="post" enctype="multipart/form-data">
					<div class="row">
						<div class="col-lg-12">
							<input type="text" name="name" placeholder="Name" value="{{#user}}{{name}}{{/user}}">
						</div>
					</div>
					<div class="row" style="display:none;">
						<div class="col-lg-12">
							<input type="text" name="email">
						</div>
					</div>
					<div class="row">
						<div class="{{#recaptcha}}col-lg-6{{/recaptcha}}{{^recaptcha}}col-lg-12{{/recaptcha}}">
							<textarea id="inputText" name="post" class="col-lg-12" cols="64" rows="5"></textarea>
						</div>
						{{#recaptcha}}
						<div class="col-lg-6">
							<script type="text/javascript" src="http://www.google.com/recaptcha/api/challenge?k={{publicRecaptcha}}">
							</script>
							<noscript>
								<iframe src="http://www.google.com/recaptcha/api/noscript?k={{publicRecaptcha}}" height="300" width="500" frameborder="0"></iframe><br>
								<textarea name="recaptcha_challenge_field" rows="3" cols="40">
								</textarea>
								<input type="hidden" name="recaptcha_response_field" value="manual_challenge">
							</noscript>
						</div>
						{{/recaptcha}}
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="submit" class="btn btn-default btn-block" value="Post Reply" />
						</div>
					</div>
				</form>
			</div>
		</div>
		{{/thread}}
	</div>
{{>foot}}