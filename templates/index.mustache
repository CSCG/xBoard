{{>head}}
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="pull-right"><a href="/" class="title">{{siteName}}</a></h2>
			</div>
		</div>
		<hr>
		{{#threads}}
			<div class="row">
				<div class="col-lg-12">
					<h3><a href="/{{id}}" rel="nofollow">{{title}}</a></h3>
					<p>By: {{name}} | Posts: {{count}} | <span class="unixtime" data-timestamp="{{updated}}"></span></p>
				</div>
			</div>
			<hr>
		{{/threads}}
		<div id="createbox" class="outerbox container row"><div class="innerbox">
			<h2>New thread</h2>
			<form class="form-horizontal" id="threadform" action="/post" method="post" enctype="multipart/form-data">
					<div class="row">
						<div class="col-lg-6">
							<input type="text" name="title" size="46" maxlength="100" placeholder="Title:">
						</div>
						<div class="col-lg-6">
							<input type="text" name="name" placeholder="Name" id="name">
						</div>
					</div>
					<div class="row" style="display:none;">
						<div class="col-lg-12">
							<input type="text" name="email">
						</div>
					</div>
					<div class="row">
						<div class="{{#recaptcha}}col-lg-6{{/recaptcha}}{{^recaptcha}}col-lg-12{{/recaptcha}}">
							<textarea id="inputText" name="post" class="col-lg-12" cols="64" rows="5"></textarea>
						</div>
						{{#recaptcha}}
						<div class="col-lg-6">
							<script type="text/javascript" src="http://www.google.com/recaptcha/api/challenge?k={{publicRecaptcha}}">
							</script>
							<noscript>
								<iframe src="http://www.google.com/recaptcha/api/noscript?k={{publicRecaptcha}}" height="300" width="500" frameborder="0"></iframe><br>
								<textarea name="recaptcha_challenge_field" rows="3" cols="40">
								</textarea>
								<input type="hidden" name="recaptcha_response_field" value="manual_challenge">
							</noscript>
						</div>
						{{/recaptcha}}
					</div>
					<div class="row">
						<div class="col-lg-12">
							<input type="submit" class="btn btn-default btn-block" value="Create new thread" />
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
{{>foot}}